<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_width="match_parent" android:layout_height="40dip" android:background="#5566ff00"
              android:gravity="center" android:text="高级工具" android:textSize="20sp"/>
    <LinearLayout android:onClick="addressQuery" android:clickable="true" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@android:drawable/ic_media_ff"/>
        <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="号码归属地查询"/>
    </LinearLayout>
    <LinearLayout android:onClick="commonNumberQuery" android:clickable="true" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@android:drawable/ic_media_ff"/>
        <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="常用号码查询"/>
    </LinearLayout>
</LinearLayout>