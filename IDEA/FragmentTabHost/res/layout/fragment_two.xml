<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <Button android:id="@+id/btn_two_one" android:text="我是列表one，点击显示列表two" android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button android:id="@+id/btn_two_two" android:text="我是列表two，点击显示列表one" android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_two_fragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>