<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.bingoogol.volley"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="cn.bingoogol.volley.VolleyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SimpleRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.JsonRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ParamsRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.GsonRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ImageLoadingActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>