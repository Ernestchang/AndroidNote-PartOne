<resources>

    <!-- 欢迎界面样式，修复第一次打开出现黑屏问题 -->
    <style name="Theme.Splash" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 宽度包裹内容，高度 填充父窗体 -->
    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 宽度填充父窗体，高度包裹内容 -->
    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 宽度和高度都包裹内容 -->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 宽度和高度都填充父窗体 -->
    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 宽度填充父窗体，高度自适应 -->
    <style name="match_auto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <!-- 宽度自适应，高度填充父窗体 -->
    <style name="auto_match">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 宽度包裹内容，高度自适应 -->
    <style name="wrap_auto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- 宽度自适应，高度包裹内容 -->
    <style name="auto_wrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 横线 -->
    <style name="match_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- 竖线 -->
    <style name="one_match">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match_vertical" parent="@style/wrap_match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wrap_match_horizontal" parent="@style/wrap_match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="match_wrap_vertical" parent="@style/match_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="match_wrap_horizontal" parent="@style/match_wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wrap_wrap_vertical" parent="@style/wrap_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wrap_wrap_horizontal" parent="@style/wrap_wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="match_match_vertical" parent="@style/match_match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="match_match_horizontal" parent="@style/match_match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="match_auto_vertical" parent="@style/match_auto">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="match_auto_horizontal" parent="@style/match_auto">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="auto_match_vertical" parent="@style/auto_match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="auto_match_horizontal" parent="@style/match_match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wrap_auto_vertical" parent="@style/wrap_auto">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wrap_auto_horizontal" parent="@style/wrap_auto">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="auto_wrap_vertical" parent="@style/auto_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="auto_wrap_horizontal" parent="@style/auto_wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tab_rb" parent="@style/auto_wrap">
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_tab_tv</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:background">@drawable/selector_tab_checked</item>
    </style>

    <style name="Theme.ActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- ActionBarTab文字颜色 -->
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">

        <!-- ActionBar背景 -->
        <item name="android:background">#f4842d</item>
        <!-- ActionBarTab背景 -->
        <!-- <item name="android:backgroundStacked">#d27026</item> -->
        <!-- ActionBar标题文字颜色 -->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>

</resources>