<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap_horizontal"
    android:background="#3D3D41"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_item_file_child_icon"
        android:layout_width="@dimen/iconSize_middle"
        android:layout_height="@dimen/iconSize_middle"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_item_file_child_name"
        style="@style/match_wrap"
        android:layout_marginLeft="@dimen/size_middle"
        android:gravity="left"
        android:padding="@dimen/size_middle"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_small" />

</LinearLayout>