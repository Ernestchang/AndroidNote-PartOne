<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <Button android:id="@+id/btn_one_one" android:text="one one" android:textSize="20sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btn_one_two" android:text="one two" android:textSize="20sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>

    <FrameLayout android:id="@+id/fl_one_content" android:layout_width="match_parent" android:layout_height="match_parent"></FrameLayout>
</LinearLayout>